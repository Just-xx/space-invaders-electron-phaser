    "package": "electron-forge package",
    "make": "electron-forge make --platform darwin",
    "make:windows": "electron-forge make --platform win32 --arch x64"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.10.2",
    "@electron-forge/maker-deb": "^7.10.2",
