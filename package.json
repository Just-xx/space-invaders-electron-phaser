{
  "name": "space-invaders",
  "productName": "Space Invaders - Inwazja 2.0",
  "version": "1.5.0",
  "description": "Clasic desktop game space invaders. Made with use of electron.js and phaser.js",
  "license": "ISC",
  "author": {
    "name": "Jakub",
    "email": "kubadreczz@gmail.com"
  },
  "main": ".vite/build/main.js",
  "scripts": {
    "dev:vite": "vite src",
    "dev:electron": "electron main.js",
    "dev": "concurrently 'npm run dev:vite' 'npm run dev:electron'",
